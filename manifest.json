{
    "manifest_version": 2,
    "name": "萝卜兔助手",
    "description": "Helper for lbtoo.com",
    "version": "1.0.0",
    "permissions": [
        "http://*.lbtoo.com/",
        "https://*.lbtoo.com/",
        "unlimitedStorage",
        "alarms",
        "background",
        "notifications"
    ],
    "icons": {
        "256": "img/icons/icon_32.png",
        "128": "img/icons/icon_32.png",
        "64": "img/icons/icon_32.png",
        "32": "img/icons/icon_32.png",
        "16": "img/icons/icon_16.png"
    },
    "browser_action": {
        "default_icon": "favicon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "favicon.png"
    ],
    "background": {
        "page": "back.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}